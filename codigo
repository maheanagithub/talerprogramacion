       et5 = (EditText)findViewById(R.id.et5);
       et6 = (EditText)findViewById(R.id.et6);
       et7 = (EditText)findViewById(R.id.et7);
       et8 = (EditText)findViewById(R.id.et8);
       et9 = (EditText)findViewById(R.id.et9);
